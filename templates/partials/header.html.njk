    </div>
    <nav class="c-nav-main" id="nav-main">
      <div class="c-nav-main__content">
        <ul class="c-nav-main__list">
          {{ navItem('ðŸš€ Buy Ticket ðŸš€', buyTicketsLink) }}
          {{ navItem('Info', contents['info.json'].url) }}
