          {{ navItem('Scholarships', contents['scholarships.json'].url) }}
          {{ navItem('Call for Speakers', contents['call-for-speakers.json'].url) }}
          {{ navItem('Team', contents['team.json'].url) }}
          {{ navItem('Blog', 'https://blog.cssconf.eu', true) }}
