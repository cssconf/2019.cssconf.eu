{% from "../_macros.njk" import svgIconNew, ctaButton %}

{% block content %}
  <section class="c-content">
    <div class="l-container">
      {{ svgIconNew(contents, 'intro', width = 1205, height = 458, title = 'CSSconf.EU - Berlin - May 31, 2019') }}
      <p class="copy--max mt5 mb4 mt6-l mb5-l measure-cssconf center tc">
        Dedicated to everyone who loves and writes CSS.
      </p>
      <p class="measure-cssconf center tc">
        {{ ctaButton(contents['schedule.json'].url, '⏱️ View Schedule', false) }}
