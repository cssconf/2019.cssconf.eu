      url({{ contents.fonts['GT-Walsheim-Medium.ttf'].url }}) format('truetype');
    }
    body {
      overflow: hidden;
      height: 100vh;
      font-family: "GT Walsheim Pro", sans-serif;
    }
    .wrapper{
      display: flex;
      align-items: center;
      position: relative;
      height: 100vh;
    }
    section {
      display: flex;
      align-items: center;
      flex-wrap: wrap;
    }
    .session {
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      display: flex;
      align-content: flex-start;
      align-items: flex-start;
      flex-direction: column;
      transform: translateX(-1000px) translateZ(0);
      display: none;
    }
    .session.active {
      transform: translateX(0) translateZ(0);
    }
    .session.previous {
      transform: translateX(2000px) translateZ(0);
    }
    .session.inplay {
      display: flex;
      flex-wrap: wrap;
    }
    .session .info > * {
      transform: translateY(-1000px) translateZ(0);
    }
    .session.active .info > * {
      transform: translateY(0) translateZ(0) !important;
    }
  </style>
