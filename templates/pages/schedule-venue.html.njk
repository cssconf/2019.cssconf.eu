      url({{ contents.fonts['GT-Walsheim-Regular.ttf'].url }}) format('truetype');
    }

    @font-face {
      font-family: "GT Walsheim Pro";
      font-display: fallback;
      font-weight: bold;
      src: url({{ contents.fonts['GT-Walsheim-Medium.eot'].url }});
      src: url({{ contents.fonts['GT-Walsheim-Medium.eot'].url }}) format('embedded-opentype'),
