{% extends "../layouts/default.html.njk" %}

{% from "../partials/content-grid.html.njk" import contentGrid %}
{% from "../_macros.njk" import pageIntro %}

{% set data = contents.copy.info['main.md'] %}
{% set items = [
] %}

{% block content %}
  {{
    pageIntro(
      data.metadata.title,
      data.metadata.introText,
      contents.images.intros[data.metadata.introImage]
    )
  }}

  <div class="l-container">
    <main>
      {% if items.length > 0 %}
        {{ contentGrid(items) }}
      {% endif %}
      <div class="c-markdown c-markdown--indented-paragraphs">
        {{ data.html }}
      </div>
    </main>
  </div>
{% endblock %}
