{% extends "../layouts/default.html.njk" %}

{% from "../partials/content-grid.html.njk" import contentGrid %}
{% from "../_macros.njk" import pageIntro %}

{% set data = contents.copy.info['main.md'] %}
{% set items = [
  contents.cms['mission-and-values.md'],
  contents.cms['services.md'],
  contents.cms['travel-hotels-and-transport.md'],
  contents.cms['ramadan.md'],
  contents.cms['accessibility.md'],
  contents.news['childcare.md'],
  contents.cms['community-lounge.md'],
  contents.cms['bipocit-space.md'],
  contents.cms['faq.md']
] %}

{% block content %}
  {{
    pageIntro(
      data.metadata.title,
      data.metadata.introText,
      contents.images.intros[data.metadata.introImage]
    )
  }}

  <div class="l-container">
    <main>
      {{ contentGrid(items) }}
      <div class="c-markdown c-markdown--indented-paragraphs">
        {{ data.html }}
      </div>
    </main>
  </div>
{% endblock %}
